<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="337.0" prefWidth="701.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gameoanquan.handler.HomeHandler">
   <children>
      <ImageView fx:id="homeBackGround" fitHeight="328.0" fitWidth="689.0" layoutX="7.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/background.png" />
         </image>
      </ImageView>
      <ImageView fx:id="logo" fitHeight="272.0" fitWidth="408.0" layoutX="208.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/logo2.png" />
         </image>
      </ImageView>
      <Button fx:id="playButton" layoutX="312.0" layoutY="207.0" mnemonicParsing="false" onAction="#playGame" text="Chơi Game" />
      <Button fx:id="exitButton" layoutX="327.0" layoutY="297.0" mnemonicParsing="false" onAction="#exitGame" text="Thoát" />
      <Button fx:id="helpButton" layoutX="312.0" layoutY="249.0" mnemonicParsing="false" onAction="#openGuild" text="Hướng dẫn" />
   </children>
</AnchorPane>
